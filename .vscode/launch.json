{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Unittest",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "args": [
        "${file}", // This uses the currently active file
        "-v" // Verbose output; adjust as needed
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask", // Use "module" to ensure Flask is launched correctly
      "console": "integratedTerminal",
      "env": {
        "FLASK_APP": "server/app.py", // Ensure this is the correct relative path to your app module
        "FLASK_ENV": "development"
      },
      "args": ["run", "--host=localhost", "--port=8000", "--debug"],
      "jinja": true
    },
    {
      "name": "Python: Pytest Asyncio",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "-s",
        "-o",
        "asyncio_mode=auto",
        "/Users/nzozaya/Salesforce/io-webapp/server/app/tests/test_should_parse_activations_async_test.py::TestActivationLogic"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client" // Adjust this path to the frontend folder
    }
  ]
}
